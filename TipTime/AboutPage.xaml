<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.AboutPage"
             Title="Repositório do projeto">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            BackgroundColor="LightGray">

            <Image
                Source="git.png"
                HeightRequest="250"
                WidthRequest="250"
                Aspect="AspectFill"
                SemanticProperties.Description="Logo branco do GitHub com fundo transparente."/>
            <Label 
                Text="Calculadora de Gorjeta"
                TextColor="Orange"
                Style="{StaticResource Headline}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button
                x:Name="LinkGit"
                Text="Ir para o repositório do projeto" 
                SemanticProperties.Hint="Vai pro Git quando clica"
                Clicked="LinkGit_Clicked"
                HorizontalOptions="Fill"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>